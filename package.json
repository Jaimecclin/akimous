    "license": "MIT",
    "private": true,
    "devDependencies": {
        "autoprefixer": "^8.6.0",
        "babel-core": "6.26.3",
        "babel-minify": "^0.4.3",
        "babel-plugin-transform-remove-console": "^6.9.4",
        "browser-sync": "^2.24.4",
        "browserslist": "^3.2.8",
        "cloc": "^2.3.3",
        "codemirror": "^5.38.0",
        "css-element-queries": "^1.0.2",
        "eslint": "^4.19.1",
        "eslint-plugin-html": "^4.0.3",
        "http-server": "^0.11.1",
        "keyboardjs": "^2.4.1",
        "normalize.css": "^8.0.0",
        "pressure": "^2.1.2",
        "primer-tooltips": "^1.5.4",
        "rollup": "^0.60.0",
        "rollup-plugin-babel": "^3.0.4",
        "rollup-plugin-commonjs": "^9.1.3",
        "rollup-plugin-node-resolve": "^3.3.0",
        "rollup-plugin-postcss": "^1.6.2",
        "rollup-plugin-progress": "^0.4.0",
        "rollup-plugin-sizes": "^0.4.2",
        "rollup-plugin-svelte": "^4.1.0",
        "sortablejs": "^1.7.0",
        "svelte": "^2.7.1",
        "xterm": "^3.4.1"
    },
    "dependencies": {},
    "scripts": {
        "dev": "browser-sync start --server 'dist' --files 'dist/bundle.js' & rollup -c -w",
        "lint": "eslint --ext .html,.js .",
        "build": "mkdir -p dist && rm -rf dist/* && cp -r src/index.html resources/* dist/ && rollup -c",
        "copystatic": "cp -r src/index.html resources/* dist/",
        "release": "mkdir -p dist && rm -rf dist/* && cp -r src/index.html resources/* dist/ && rollup -c && cloc src resources chakuro-agent && cd dist/ && zopfli bundle.* && brotli bundle.js",
        "start": "http-server ./dist -p 5000 -g"
    },
    "browserslist": [
        "last 2 Safari versions",
        "last 2 Chrome versions",
        "last 2 Firefox versions",
        "last 1 Edge versions",
        "last 1 ChromeAndroid versions"
    ]
}
