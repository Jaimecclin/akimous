    "private": true,
    "devDependencies": {
        "babel-core": "6",
        "babel-minify": "^0.4.0",
        "browser-sync": "^2.23.7",
        "cloc": "^2.3.3",
        "codemirror": "^5.37.0",
        "css-element-queries": "^1.0.2",
        "eslint": "^4.19.1",
        "eslint-plugin-html": "^4.0.3",
        "http-server": "^0.11.1",
        "keyboardjs": "^2.4.1",
        "normalize.css": "^8.0.0",
        "pressure": "^2.1.2",
        "primer-tooltips": "^1.5.3",
        "rollup": "^0.58.1",
        "rollup-plugin-babel": "^3.0.3",
        "rollup-plugin-commonjs": "^9.1.0",
        "rollup-plugin-node-resolve": "^3.3.0",
        "rollup-plugin-postcss": "^1.6.1",
        "rollup-plugin-sizes": "^0.4.2",
        "rollup-plugin-strip": "^1.1.1",
        "rollup-plugin-svelte": "^4.1.0",
        "sortablejs": "^1.7.0",
        "svelte": "^2.0.0",
        "svelte-cli": "^2.0.0",
        "xterm": "^3.3.0"
    },
    "dependencies": {},
    "scripts": {
        "dev": "browser-sync start --server 'dist' --files 'dist' & rollup -c -w",
        "lint": "eslint --ext .html,.js .",
        "build": "mkdir -p dist && rm -rf dist/* && cp -r src/index.html resources/* dist/ && rollup -c",
        "copystatic": "cp -r src/index.html resources/* dist/",
        "release": "mkdir -p dist && rm -rf dist/* && cp -r src/index.html resources/* dist/ && rollup -c && cloc src/ && cd dist/ && zopfli bundle.* && brotli bundle.js",
        "start": "http-server ./dist -p 5000 -g"
    }
}
